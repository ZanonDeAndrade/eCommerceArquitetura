generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Order {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int
  items     OrderItem[]
  total     Float
  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())
}

type OrderItem {
  productId Int
  quantity  Int
  subtotal  Float
}

enum OrderStatus {
  PENDING
  FAILED
  PAID
  CANCELLED
}
