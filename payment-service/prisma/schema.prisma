generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id        Int      @id @default(autoincrement())
  orderId   String   // referÃªncia ao order-service
  method    String
  amount    Float
  success   Boolean  @default(false)
  createdAt DateTime @default(now())
}
